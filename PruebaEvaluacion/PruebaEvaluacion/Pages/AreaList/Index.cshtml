@page
@model PruebaEvaluacion.Pages.AreaList.IndexModel

<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Lista de areas</h2>
    </div>
    <div class="col-3">
        <a asp-page="CreateArea" class="btn btn-info form-control text-white">Agregar area</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Areas.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Areas.FirstOrDefault().Nombre"></label>
                        </th>
                        <th>
                            <label asp-for="Areas.FirstOrDefault().Descripcion"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Areas)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Descripcion)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.IdArea" onclick="return confirm('¿Desea eliminar el area?')" class="btn btn-danger btn-sm">Eliminar</button>
                                <a asp-page="EditArea" asp-route-id="@item.IdArea" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No hay areas registradas</p>
            }
        </form>
    </div>
</div>
